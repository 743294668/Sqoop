######################### SQOOP-SERVER VARIABLES #########################


# Directory where the sqoop-server binary distribution resides
export SqoopServer_HOME=/opt/sds/$NAME

# Heap Size (defaults to 256m min, 1g max)
#export SqoopServer_HEAP_SIZE=2g

# Heap new generation
#export SqoopServer_HEAP_NEWSIZE=

# max direct memory
#export SqoopServer_DIRECT_SIZE=

# Additional Java OPTS
#export SqoopServer_JAVA_OPTS=

# Maximum number of open files
export MAX_OPEN_FILES=65535

# Maximum amount of locked memory
#export MAX_LOCKED_MEMORY=

# sqoop-server log directory
export LOG_DIR=/var/log/sds/$NAME
export LOG_FILE=$LOG_DIR/sqoop-server.log

# sqoop-server data directory
export DATA_DIR=/var/sds/$NAME

# sqoop-server work directory
export WORK_DIR=/tmp/$NAME

# sqoop-server configuration directory
export SERVER_PROPERTIES=/etc/sds/$NAME


# Maximum number of VMA (Virtual Memory Areas) a process can own
export MAX_MAP_COUNT=262144

############################ SERVICE VARIABLES ############################
SCRIPTNAME=/etc/init.d/$NAME
# Run Sqoop Server as this user ID and group ID
USER=sqoop-server
GROUP=stratio

# Define other required variables
RUN_DIR=/var/run/sds
PIDFILE=$RUN_DIR/$NAME/$NAME.pid
LOCKDIR="/var/lock"
if [ -d $LOCKDIR/subsys ]; then # It's most likely a CentOS
	LOCKDIR=$LOCKDIR/subsys
fi
LOCKFILE=$LOCKDIR/$NAME
DAEMON=$SqoopServer_HOME/bin/sqoop-server.sh
DAEMON_OPTS=