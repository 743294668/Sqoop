########################## SQOOP VARIABLES #########################

# Directory where the sqoop binary distribution resides
export Sqoop_HOME=/opt/sds/$NAME

# Heap Size (defaults to 256m min, 1g max)
#export Sqoop_HEAP_SIZE=2g

# Heap new generation
#export Sqoop_HEAP_NEWSIZE=

# max direct memory
#export Sqoop_DIRECT_SIZE=

# Additional Java OPTS
#export Sqoop_JAVA_OPTS=

# Maximum number of open files
export MAX_OPEN_FILES=65535

# Maximum amount of locked memory
#export MAX_LOCKED_MEMORY=

# sqoop log directory
export LOG_DIR=/var/log/sds/$NAME
export LOG_FILE=$LOG_DIR/sqoop.log

# sqoop data directory
export DATA_DIR=/var/sds/$NAME

# sqoop work directory
export WORK_DIR=/tmp/$NAME

# sqoop configuration directory
export SERVER_PROPERTIES=/etc/sds/$NAME


# Maximum number of VMA (Virtual Memory Areas) a process can own
export MAX_MAP_COUNT=262144

############################ SERVICE VARIABLES ############################
SCRIPTNAME=/etc/init.d/$NAME
# Run Sqoop as this user ID and group ID
USER=sqoop
GROUP=stratio

# Define other required variables
RUN_DIR=/var/run/sds
PIDFILE=$RUN_DIR/$NAME/$NAME.pid
LOCKFILE="/var/lock/subsys/$NAME"
DAEMON=$Sqoop_HOME/bin/sqoop.sh
DAEMON_OPTS=